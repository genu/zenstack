datasource db {
    provider = 'sqlite'
}

type Address {
    street String
    city   String
    zip    String?
}

enum Role {
    ADMIN
    USER
}

model User {
    id      String   @id @default(cuid())
    email   String   @unique
    name    String?
    role    Role
    address Address? @json
    posts   Post[]
}

model Post {
    id      String  @id @default(cuid())
    title   String
    owner   User?   @relation(fields: [ownerId], references: [id])
    ownerId String?
}

procedure getUserPosts(userId: String): Post[]
